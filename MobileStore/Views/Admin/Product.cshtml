@model List<MobileStore.DatabaseFiles.Tbl_Product>
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 style="padding-left:30px;">Product</h3>


<div class="container-fluid">

    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
        <li class="breadcrumb-item active">@ViewBag.Title</li>
    </ol>
    <div class="card mb-4">


    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Product Detail
            <div style="float:right; background-color:black; border-radius:50%; opacity:40;">
                <a class="btn btn info pull-right" style="background-color:white;" href="../Admin/AddProduct"><i class="fa fa-plus-circle" aria-hidden="true"></i>Add New </a>
            </div>

        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Sr.No</th>
                            <th>Product Name</th>
                            <th>Action</th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var i in Model)
                        {
                            <tr>
                                <td>@(Model.IndexOf(i)+1)</td>
                                <td>@i.ProductName</td>
                                <td>
                                @Html.ActionLink("Edit","ProductEdit", new { productId = i.ProductId})
                                </td>

                            </tr>
                        }



                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>