@using MobileStore.Models.ViewModels


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Mobile Store</title>
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@
    <link href="~/Content/Layout.css" rel="stylesheet" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
   
    <link href="~/Content/index.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body>
    
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6">
                <div >
                    <h1 ><a href="../Home/Index">Mobile-Store</a></h1>
                 
                </div>
            </div>

            <div class="col-md-6 col-sm-6 col-xs-6 ">
                <ul class="nav navbar-nav navbar-light " style="float:right">
                    <li class="dropdown-menu "style="box-shadow:none;border:none;">
                        <a data-toggle="dropdown" class="dropdown-toggle" style="padding:30px"><i class="fa fa-shopping-cart" style="font-size:24px;color:black;float:right"></i></a>
                        <ul class="dropdown-menu">
                            @if (Session["cart"] != null)
                            {
                                foreach (var i in (List<Item>)Session["cart"])
                                {
                                    <li><a href="#">@i.Product.ProductName (@i.Quantity)</a></li>
                                }
                            }



                            <li class="divider"></li>
                            <li><a href="@Url.Action("Checkout","Home")">Checkout</a></li>
                        </ul>
                    </li>

                </ul>
            </div>

        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="nav-menus">
                    <ul class="nav nav-pills">
                        <li class="active"><a style="border-radius:50px;" href="../Home/Index">Home</a> </li>
                        <li><a style="border-radius:50px;" href="../Home/About">About</a> </li>
                        <li><a style="border-radius:50px;" href="#">Privacy</a> </li>
                    </ul>
                </div>
            </div>
        </div>

        @RenderBody()
        <hr />
       <footer>
            <div class="container-fluid" >
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <p> @DateTime.Now.Year - online mobile store</p>
                    </div>
                </div>
                   
                   

               
            </div>

        </footer>

       
            
       
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
